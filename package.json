{
  "name": "easy-anim-code",
  "displayName": "easy-anim-code",
  "description": "对vscode的基本操作添加动画",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Easy Anim Code",
      "properties": {
        "easy-anim-code.PrimaryColor": {
          "type": "string",
          "default": "#2aaaff",
          "markdownDescription": "插件的主色调（只支持#RGB，#RGBA，#RRGGBB，#RRGGBBAA）"
        }
      }
    },
    "commands": [
      {
        "command": "easy-anim-code.enable",
        "title": "easy-anim-code.enable-开启动画"
      },
      {
        "command": "easy-anim-code.disable",
        "title": "easy-anim-code.disable-关闭动画"
      },
      {
        "command": "easy-anim-code.reset",
        "title": "easy-anim-code.reset-重置到默认状态"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "easy-anim-code": "file:"
  }
}